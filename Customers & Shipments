-- EN: SQL Practice Project ‚Äì Customers & Shipments
-- ES: Proyecto de Pr√°ctica SQL ‚Äì Clientes y Env√≠os

-- EN: This dataset simulates customers and their shipments.
--     The goal is to practice JOINs, filtering, and conditional queries.
-- ES: Este dataset simula clientes y sus env√≠os.
--     El objetivo es practicar JOINs, filtros y consultas condicionales.

-- ==========================
-- üìÇ DATASET STRUCTURE
-- ==========================

CREATE TABLE customers (
    customer_id INTEGER PRIMARY KEY,
    customer_name TEXT,
    contact_email TEXT,
    contact_phone TEXT,
    billing_address TEXT,
    shipping_address TEXT
);

CREATE TABLE shipments (
    shipment_id INTEGER PRIMARY KEY,
    customer_id INTEGER,
    package_description TEXT,
    weight_kg REAL,
    shipping_method TEXT,
    shipping_date DATE,
    delivery_date DATE,
    status TEXT
);

