-- ==========================
-- üìä QUERIES
-- ==========================

-- A) EN: Display the customer id, name, shipping address, and shipment status for customers who have placed at least one order.
--    ES: Mostrar el ID del cliente, nombre, direcci√≥n de env√≠o y estado del env√≠o para clientes que han realizado al menos un pedido.

SELECT
  customers.customer_id,
  customers.customer_name,
  customers.shipping_address,
  shipments.status
FROM customers
JOIN shipments
  ON customers.customer_id = shipments.customer_id;

-- B) EN: Show the shipment id and shipping address for customers whose shipment status is 'In Transit'.
--    ES: Mostrar el ID del env√≠o y la direcci√≥n de env√≠o de clientes cuyo estado del env√≠o es 'In Transit'.

SELECT
  shipments.shipment_id,
  customers.shipping_address,
  shipments.status
FROM customers
JOIN shipments
  ON customers.customer_id = shipments.customer_id
WHERE shipments.status = 'In Transit';

-- C) EN: Display the name and email address for customers who have never used Express shipments.
--    ES: Mostrar el nombre y correo de clientes que nunca han usado env√≠os Express.

SELECT DISTINCT
  customers.customer_name,
  customers.contact_email
FROM customers
JOIN shipments
  ON customers.customer_id = shipments.customer_id
WHERE customers.customer_id NOT IN (
  SELECT customer_id
  FROM shipments
  WHERE shipping_method = 'Express'
);
